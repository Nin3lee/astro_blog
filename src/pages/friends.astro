---
import DefaultLayout from "@layouts/DefaultLayout.astro";
import friends from "@data/friends.json";
import Comments from "@components/Comments.astro";
---

<DefaultLayout>
    <div class="bg-[#F9F9F9]">
        <main
            class="px-8 w-[25rem] min-[360px]:w-[30rem] md:w-[62.5rem] mx-auto"
        >
            <div class="text-3xl font-semibold text-[#333] pt-6">é‚»å±… ðŸ‘¾</div>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-6">
                {
                    friends.map((friend) => (
                        <a
                            href={friend.url}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <div class="flex flex-col items-center gap-4 rounded-3xl shadow-lg bg-white px-4 py-8 duration-300 hover:scale-95">
                                <img
                                    src={friend.img}
                                    width="100"
                                    height="100"
                                    alt={friend.name}
                                    class="rounded-full"
                                />
                                <div class="text-2xl">{friend.name}</div>
                                <div class="text-gray-500 text-center whitespace-pre-line line-clamp-2 leading-6">
                                    {friend.description}
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>
            <div class="py-10">
                <Comments />
            </div>
        </main>
    </div>
</DefaultLayout>
