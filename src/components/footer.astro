---
import { Icon } from "astro-icon";
---

<!doctype html>
<html lang="zh" class="text-xs lg:text-sm">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>footer</title>
        <style lang="css">
            [astro-icon="hexo"] {
                width: 14px;
                height: 14px;
            }
            [astro-icon="astro"],
            [astro-icon="figma"],
            [astro-icon="netlify"],
            [astro-icon="tailwind"] {
                width: 16px;
                height: 16px;
            }
        </style>
    </head>

    <body>
        <hr />
        <div class="bg-[#F3F3F3]">
            <footer
                class="h-[150px] md:w-[62.5rem] md:mx-auto mx-6 flex flex-col justify-evenly font-normal text-[12px]"
            >
                <div class="flex gap-2 mt-6 text-[#999] items-center">
                    Powered by
                    <div
                        class="flex gap-[4px] bg-[#D9D9D9] px-[4px] h-[20px] rounded-full items-center"
                    >
                        <a href=""
                            ><Icon
                                name="astro"
                                class="fill-white hover:fill-blue-500 duration-200"
                            /></a
                        >
                        <a href=""
                            ><Icon
                                name="netlify"
                                class="fill-white hover:fill-blue-500 duration-200"
                            /></a
                        >
                        <a href=""
                            ><Icon
                                name="figma"
                                class="fill-white hover:fill-blue-500 duration-200"
                            /></a
                        >
                        <a href=""
                            ><Icon
                                name="tailwind"
                                class="fill-white hover:fill-blue-500 duration-200"
                            /></a
                        >
                    </div>
                </div>
                <div class="flex gap-2">
                    <span class="text-[#999]">Provide Preference by</span><a
                        href=""
                        class="hover:underline underline-offset-2 duration-200 hover:text-blue-500 text-[#666]"
                        >异次元de机智君</a
                    >
                </div>
                <div class="flex flex-row justify-between">
                    <div class="flex gap-2 items-center group">
                        <span class="text-[#999]">
                            Re-designed & Built with <span
                                class="font-mono text-xl group-hover:text-red-400 duration-300"
                                >❤</span
                            > by</span
                        ><a
                            href=""
                            class="hover:underline underline-offset-2 duration-200 hover:text-blue-500 text-[#666]"
                            >Nin3lee</a
                        >
                    </div>
                    <a
                        href=""
                        class="hover:underline underline-offset-2 duration-200 hover:text-blue-500 text-[#666] hover:fill-blue-500 fill-[#666] flex items-center gap-1"
                    >
                        <Icon name="hexo" class="" />
                        <span class="">看看旧博客</span>
                    </a>
                </div>
                <hr />
                <div class="flex flex-row justify-between mb-6">
                    <div>
                        <span class="text-[#999]">Copyright © 2023-2024</span>
                        <a
                            href=""
                            class="hover:underline underline-offset-2 duration-200 text-[#666] hover:text-blue-500"
                            >Nin3</a
                        >
                    </div>
                    <a
                        href=""
                        class="hover:underline underline-offset-2 duration-200 hover:text-blue-500 text-[#666]"
                        >CC BY-NC-SA 4.0</a
                    >
                </div>
            </footer>
        </div>
    </body>
</html>
