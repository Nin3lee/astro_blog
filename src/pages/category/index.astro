---
import DefaultLayout from "../../layouts/DefaultLayout.astro";
const categories = [
    {
        title: "+ 代码钻研",
        number: "0",
        subtitle: "< / >",
        color: "from-orange-start to-orange-end",
    },
    {
        title: "+ 视觉设计",
        number: "1",
        subtitle: "视觉",
        color: "from-blue-start to-blue-end",
    },
    {
        title: "+ 更多内容",
        number: "0",
        subtitle: "更多+",
        color: "from-yellow-start to-yellow-end",
    },
    {
        title: "+ 经验分享",
        number: "2",
        subtitle: "EXP+",
        color: "from-green-start to-green-end",
    },
    {
        title: "+ 音乐推荐",
        number: "0",
        subtitle: "音乐♪",
        color: "from-purple-start to-purple-end",
    },
    {
        title: "+ 测试模板",
        number: "1",
        subtitle: "Test+",
        color: "from-cyan-start to-cyan-end",
    },
];
---

<DefaultLayout>
    <div class="flex flex-col min-h-screen bg-[#F9F9F9]">
        <main class="mb-auto">
            <div class="px-8 w-[32rem] md:w-[62.5rem] mx-auto">
                <div class="text-3xl font-semibold text-[#333] mt-6">
                    分类 📖
                </div>
                <div
                    class="grid grid-cols-2 md:grid-cols-3 grid-rows-3 md:grid-rows-2 gap-6 py-6"
                >
                    <a href="/category/代码/">
                        <div
                            class="rounded-2xl bg-gradient-to-r from-orange-start to-orange-end duration-300 hover:scale-95 aspect-square flex flex-col justify-between p-6"
                        >
                            <div class="flex justify-between items-center">
                                <div class="text-xl text-white font-normal">
                                    {categories[0].title}
                                </div>
                                <div
                                    class="rounded-full bg-white px-2 text-lg text-orange font-semibold"
                                >
                                    {categories[0].number}
                                </div>
                            </div>
                            <div
                                class="text-6xl text-white opacity-25 font-bold"
                            >
                                {categories[0].subtitle}
                            </div>
                        </div>
                    </a>
                    <a href="/category/视觉/">
                        <div
                            class="rounded-2xl bg-gradient-to-r from-blue-start to-blue-start duration-300 hover:scale-95 aspect-square flex flex-col justify-between p-6"
                        >
                            <div class="flex justify-between items-center">
                                <div class="text-xl text-white font-normal">
                                    {categories[1].title}
                                </div>
                                <div
                                    class="rounded-full bg-white px-2 text-lg text-blue font-semibold"
                                >
                                    {categories[1].number}
                                </div>
                            </div>
                            <div
                                class="text-6xl text-white opacity-20 font-bold"
                            >
                                {categories[1].subtitle}
                            </div>
                        </div>
                    </a>
                    <a href="/category/更多/">
                        <div
                            class="rounded-2xl bg-gradient-to-r from-yellow-start to-yellow-end duration-300 hover:scale-95 aspect-square flex flex-col justify-between p-6"
                        >
                            <div class="flex justify-between items-center">
                                <div class="text-xl text-white font-normal">
                                    {categories[2].title}
                                </div>
                                <div
                                    class="rounded-full bg-white px-2 text-lg text-yellow font-semibold"
                                >
                                    {categories[2].number}
                                </div>
                            </div>
                            <div
                                class="text-6xl text-white opacity-20 font-bold"
                            >
                                {categories[2].subtitle}
                            </div>
                        </div>
                    </a>
                    <a href="/category/经验/">
                        <div
                            class="rounded-2xl bg-gradient-to-r from-green-start to-green-end duration-300 hover:scale-95 aspect-square flex flex-col justify-between p-6"
                        >
                            <div class="flex justify-between items-center">
                                <div class="text-xl text-white font-normal">
                                    {categories[3].title}
                                </div>
                                <div
                                    class="rounded-full bg-white px-2 text-lg text-green font-semibold"
                                >
                                    {categories[3].number}
                                </div>
                            </div>
                            <div
                                class="text-6xl text-white opacity-20 font-bold"
                            >
                                {categories[3].subtitle}
                            </div>
                        </div>
                    </a>
                    <a href="/category/音乐/">
                        <div
                            class="rounded-2xl bg-gradient-to-r from-purple-start to-purple-end duration-300 hover:scale-95 aspect-square flex flex-col justify-between p-6"
                        >
                            <div class="flex justify-between items-center">
                                <div class="text-xl text-white font-normal">
                                    {categories[4].title}
                                </div>
                                <div
                                    class="rounded-full bg-white px-2 text-lg text-purple font-semibold"
                                >
                                    {categories[4].number}
                                </div>
                            </div>
                            <div
                                class="text-6xl text-white opacity-20 font-bold"
                            >
                                {categories[4].subtitle}
                            </div>
                        </div>
                    </a>
                    <a href="/category/测试/">
                        <div
                            class="rounded-2xl bg-gradient-to-r from-cyan-start to-cyan-end duration-300 hover:scale-95 aspect-square flex flex-col justify-between p-6"
                        >
                            <div class="flex justify-between items-center">
                                <div class="text-xl text-white font-normal">
                                    {categories[5].title}
                                </div>
                                <div
                                    class="rounded-full bg-white px-2 text-lg text-cyan font-semibold"
                                >
                                    {categories[5].number}
                                </div>
                            </div>
                            <div
                                class="text-6xl text-white opacity-20 font-bold"
                            >
                                {categories[5].subtitle}
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </main>
    </div>
</DefaultLayout>
