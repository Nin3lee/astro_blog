{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "verbatimModuleSyntax": true,
        "strictNullChecks": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@data/*": [
                "src/data/*"
            ]
        }
    }
}